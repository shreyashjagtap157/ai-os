[Unit]
Description=AI-OS Power Manager
After=aios-agent.service

[Service]
Type=simple
ExecStart=/usr/bin/python3 /usr/lib/aios/services/power/power.py
Restart=always
RestartSec=3

# Needs capabilities for power management
CapabilityBoundingSet=CAP_SYS_ADMIN
AmbientCapabilities=CAP_SYS_ADMIN

RuntimeDirectory=aios

[Install]
WantedBy=multi-user.target
