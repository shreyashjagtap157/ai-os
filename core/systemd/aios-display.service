[Unit]
Description=AI-OS Display Compositor
After=aios-agent.service systemd-user-sessions.service
Wants=aios-shell.service

[Service]
Type=simple
ExecStart=/usr/sbin/aios-display
Restart=always
RestartSec=3
User=root
Environment=XDG_RUNTIME_DIR=/run/user/0

# GPU access
SupplementaryGroups=video render input

[Install]
WantedBy=graphical.target
