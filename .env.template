# AI-OS Environment Configuration Template
# Copy this file to .env and update with your values

# === AI/LLM Configuration ===
# Set at least one API key for AI features
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here

# AI Model Settings
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2048

# === Voice Configuration ===
VOICE_ENABLED=true
VOICE_ENGINE=google
# Options: google, whisper, sphinx
WAKE_WORD=hey ai
SPEECH_RATE=150

# === System Configuration ===
LOG_LEVEL=INFO
SANDBOX_MODE=true
# When true, only safe commands are allowed

# AI-OS home directory
AI_OS_HOME=~/.ai-os

# Command history
HISTORY_FILE=~/.ai-os-history
MAX_HISTORY=1000

# === UI Configuration ===
UI_THEME=dark
# Options: dark, light, cyberpunk, minimal
PROMPT_STYLE=arrow
# Options: arrow, classic, minimal
SHOW_SUGGESTIONS=true
ANIMATION_ENABLED=true
